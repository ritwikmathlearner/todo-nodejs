doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Home
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.15.3/css/all.css", integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk", crossorigin="anonymous")
        link(rel="stylesheet", href="assets/style.css")
    body 
        #container
            form#form(action="/todo", method="post")
                label(for="taskname") Task Name
                input(type="text", name="taskname", id="name")
                br
                input(type="submit", id="btn", value="Create")  
            #tasks
                each element, index in todos 
                    .task
                        p #{element.name} 
                        input(type="text", name="taskname", style="display:none")
                        span.edit
                            i.fas.fa-edit
                        span.delete(value=element.name) +
        script(src="assets/app.js") 